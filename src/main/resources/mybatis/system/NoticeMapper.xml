<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimple.project.system.mapper.NoticeMapper">

    <resultMap type="com.dimple.project.system.domain.Notice" id="SysNoticeResult">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="type" column="type"/>
        <result property="content" column="content"/>
        <result property="htmlContent" column="html_content"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectNoticeVo">
        select id, title, type, content,html_content, status, create_by, create_time, update_by, update_time
		from notice
    </sql>

    <select id="selectNoticeById" parameterType="Long" resultMap="SysNoticeResult">
        <include refid="selectNoticeVo"/>
        where id = #{id} and delete_time is null
    </select>

    <select id="selectNoticeList" parameterType="com.dimple.project.system.domain.Notice"
            resultMap="SysNoticeResult">
        <include refid="selectNoticeVo"/>
        where delete_time is null
        <if test="title != null and title != ''">
            AND title like concat('%', #{title}, '%')
        </if>
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        <if test="createBy != null and createBy != ''">
            AND create_by like concat('%', #{createBy}, '%')
        </if>
    </select>

    <insert id="insertNotice" parameterType="com.dimple.project.system.domain.Notice">
        insert into notice (
        <if test="title != null and title != '' ">title,</if>
        <if test="type != null and type != '' ">type,</if>
        <if test="content != null and content != '' ">content,</if>
        <if test="htmlContent != null and htmlContent != '' ">html_content,</if>
        <if test="status != null and status != '' ">status,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="title != null and title != ''">#{title},</if>
        <if test="type != null and type != ''">#{type},</if>
        <if test="content != null and content != ''">#{content},</if>
        <if test="htmlContent != null and htmlContent != ''">#{htmlContent},</if>
        <if test="status != null and status != ''">#{status},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>

    <update id="updateNotice" parameterType="com.dimple.project.system.domain.Notice">
        update notice
        <set>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="content != null and htmlContent!=''">content = #{content},</if>
            <if test="htmlContent != null and htmlContent!=''">html_content = #{htmlContent},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteNoticeByIds">
        update notice set delete_by =#{loginUsername} , delete_time= sysdate() where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
