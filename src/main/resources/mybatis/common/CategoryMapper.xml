<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimple.project.common.mapper.CategoryMapper">

    <resultMap type="com.dimple.project.common.domain.Category" id="CategoryResult">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="support" column="support"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
    </resultMap>


    <select id="selectCategoryList" parameterType="com.dimple.project.common.domain.Category"
            resultMap="CategoryResult">
        select id, title, description, support, create_by, create_time
        from category
        where delete_time is null
        <if test="type != null">
            AND type =#{type}
        </if>
        <if test="title != null and title != ''">
            AND title like concat('%', #{title}, '%')
        </if>
        <if test="support != null and support != ''">
            AND support = #{support}
        </if>
        <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
            and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
        </if>
        <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
            and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
        </if>
    </select>

    <select id="selectCategoryById" resultMap="CategoryResult">
        select id, title, description, support, create_by, create_time
        from category
        where id = #{id}
    </select>

    <select id="selectSupportBlogCategoryList" resultType="com.dimple.project.common.domain.Category">
        select id, title, description, support, create_by, create_time
        from category
        where support = 1
          and delete_time is null
          and type = 1
    </select>

    <insert id="insertCategory" parameterType="com.dimple.project.common.domain.Category" useGeneratedKeys="true"
            keyProperty="id">
        insert into category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null  and title != ''">title,</if>
            <if test="description != null  and description != ''">description,</if>
            <if test="support != null ">support,</if>
            <if test="type != null ">type,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null  and title != ''">#{title},</if>
            <if test="description != null  and description != ''">#{description},</if>
            <if test="support != null ">#{support},</if>
            <if test="type != null ">#{type},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateCategory" parameterType="com.dimple.project.common.domain.Category">
        update category
        <set>
            <if test="title != null  and title != ''">title = #{title},</if>
            <if test="description != null  and description != ''">description = #{description},</if>
            <if test="support != null ">support = #{support},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
            update_time =sysdate()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteCategoryById">
        update category
        set delete_time=sysdate(),
            delete_by=#{username}
        where id = #{id}
    </delete>

    <delete id="deleteCategoryByIds">
        update category set delete_time=sysdate(),delete_by=#{username} where id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
